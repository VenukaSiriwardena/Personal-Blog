<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/main.css">
    <title>Popular Post</title>
    <link rel="icon" type="image/x-icon" href="/images/small-logo.svg"> 
    <style>
        .bg-custom-blue {
            background-color: #1A1A40; /* Deep blue color */
            color: #FFFFFF; /* White text for contrast */
            padding: 20px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <main>
    <%- include("Navigation.ejs") %>
    <%- include("Login.ejs") %>
    <%- include("Signup.ejs") %>
    <header class="bg-primary text-white text-center py-5" style="background-image: url('images/popular_post.jpg'); background-size: cover; background-position: center; min-height: 300px;">
        <div class="container mb-3">
            <h1>WriteWave</h1>
            <p class="lead">WriteWave is a platform for sharing your thoughts.</p>
        </div>
        <button type="button" class="btn btn-primary me-2 me-md-5" id="signUpBtn" onclick="window.location.href='/posts';">Write for Us</button>
    </header>    
    </main>
    <div class="row mb-3 ms-3 me-3">
        <% posts.forEach(post => { %>
          <div class="col-md-6 mt-4">
            <div class="h-100 p-5 bg-custom-blue border rounded-3">
              <h2><%= post.title %></h2>
              <p><%= post.description %></p>
              <a href="/post/<%= post.id %>" class="btn btn-outline-secondary">Read more</a>
            </div>
          </div>
        <% }) %>
      </div> 
      <%- include("footer.ejs") %>
      <%- include("navigation_script.ejs") %>     
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
