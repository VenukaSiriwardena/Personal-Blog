<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="icon" type="image/x-icon" href="/images/title-logo.svg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .gradient-custom-2 {
            background: #fbc2eb;
            background: -webkit-linear-gradient(to right, rgba(251, 194, 235, 1), rgba(166, 193, 238, 1));
            background: linear-gradient(to right, rgba(251, 194, 235, 1), rgba(166, 193, 238, 1))
        }
    </style>
</head>
<body>
    <%- include("Navigation.ejs") %>
    <%- include("Login.ejs") %>
    <%- include("Signup.ejs") %>
    <section class="h-100 gradient-custom-2">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-9 col-xl-8">
                    <div class="card">
                        <div class="rounded-top text-white d-flex flex-row" style="background-color: #829ed6; height:200px;">
                            <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp"
                                    alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                                    style="width: 150px; z-index: 1">
                                    <button type="button" class="btn btn-outline-dark text-body" style="z-index: 1;" onclick="window.location.href='/edit_profile';">
                                        Edit profile
                                    </button>
                                    <button type="button" class="btn btn-outline-dark text-body mt-1" style="z-index: 1;" onclick="window.location.href='/logout';">
                                        Log Out
                                    </button>                                    
                            </div>
                            <div class="ms-3" style="margin-top: 130px;">
                                <h5><%= user.f_name %> <%= user.l_name %></h5>
                                <p><%= user.email %></p>
                            </div>
                        </div>
                        <div class="p-4 text-black bg-body-tertiary" style="height: 130px;">
                            <div class="d-flex justify-content-end text-center py-1 text-body">
                                <div>
                                    <p class="mb-1 h5"><%= posts.length %></p>
                                    <p class="small text-muted mb-0">Posts</p>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-4 text-black">
                            <div class="d-flex justify-content-between align-items-center mb-4 text-body">
                                <p class="lead fw-normal mb-0">Recent posts</p>
                            </div>
                            <div class="row d-flex justify-content-center">
                                <% posts.forEach((post, index) => { %>
                                <% if (index % 2 === 0) { %>
                                    <div class="row mb-3 d-flex justify-content-center">
                                <% } %>
                                    <div class="col-md-5 rounded-1 p-4 m-2" style="background-color: #829ed6;">
                                        <h2><%= post.title %></h2>
                                        <p><%= post.description %></p>
                                        <a href="/post/<%= post.id %>" class="btn btn-outline-secondary">Read more</a>
                                    </div>                                
                                <% if (index % 2 === 1) { %>
                                    </div>
                                <% } %>
                                <% }) %>
                                <% if (posts.length % 2 === 1) { %>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%- include("navigation_script.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>