<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
  .navigation {
    background-color: #f8f9fa; /* Adjust the color as needed */
  }
</style>

<nav class="navbar navbar-expand-md navbar-light bg-light sticky-top navigation">
  <a class="navbar-brand ms-3 ms-md-5" href="/">
    <img src="/images/small-logo.svg" alt="Bootstrap" width="60" height="80" class="d-inline-block align-text-top">
  </a>
  <h3 class="fw-bold lh-1 text-body-emphasis">WriteWave</h3>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link px-2" href="/"><b>Home</b></a>
      </li>
      <li class="nav-item">
        <a class="nav-link px-2" href="/popular_post"><b>Popular Posts</b></a>
      </li>
      <li class="nav-item">
        <a class="nav-link px-2" href="/contact"><b>Contact</b></a>
      </li>
      <li class="nav-item">
        <a class="nav-link px-2 ps-2" href="/about"><b>About</b></a>
      </li>
    </ul>
    <div class="navbar-nav">
      <% if (isAuthenticated) { %>
        <button type="button" class="btn btn-outline-primary me-2 ms-2" id="createPostBtn">Create Post</button>
        <button type="button" class="btn btn-primary me-2 me-md-5" id="myAccountBtn">My Account</button>
      <% } else { %>
        <button type="button" class="btn btn-outline-primary me-2 ms-2" id="signInBtn">Sign In</button>
        <button type="button" class="btn btn-primary me-2 me-md-5" id="signUpBtn">Get Started</button>
      <% } %>
    </div>
  </div>
</nav>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>